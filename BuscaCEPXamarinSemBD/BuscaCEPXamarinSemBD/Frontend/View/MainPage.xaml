<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BuscaCEPXamarinSemBD.MainPage">

    <StackLayout Margin="10,0" BackgroundColor="Aqua">
        <!-- Place new controls here -->
        <Label Text="Bem Vindo ao Xamarin.Forms !" 
           HorizontalOptions="Center"
           VerticalOptions="Start"
           Margin="0,10"/>

        <Entry x:Name="etCep"
            Placeholder="Digite seu Cep"
               Margin="0,40,0,20"/>

        <Button x:Name="btnBuscarEndereco" 
                Text="Buscar Endereço" 
                Clicked="btnBuscarEndereco_Clicked" />

        <Entry x:Name="etFiltroIdCep"
               Placeholder="Digite o Id do Cep para Buscar"
               Margin="0,40,0,20" />

        <Button x:Name="btnBuscarCepBanco"
                Text="Buscar Cep Banco"
                Clicked="btnBuscarCepBanco_Clicked"/>

    </StackLayout>

</ContentPage>
